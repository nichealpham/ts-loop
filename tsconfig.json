{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es5",
            "es2015",
            "es2017",
            "dom",
            "scripthost"
        ],
        "rootDir": "./src",
        "outDir": "dest",
        "preserveConstEnums": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./**/*.map.js"
    ]
}